{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron">
    <span class="btn btn-info btn-lg btn-block">
        <h1>Edit currency</h1>
    </span>
    <br/>

    {{ form_start(edit_form) }}
    <label>Currency:</label>
    <div class="form-group">
        {{ form(edit_form.name) }}
    </div>
    <label>Exchange rate to euro:</label>
    <div class="form-group">
        {{ form(edit_form.exchangeRateEUR) }}
    </div>
    <input type="submit" class="btn btn-primary" value="Edit" />
    {{ form_end(edit_form) }}

    <a href="{{ path('currency_index') }}">
        <button type="button" class="btn btn-success">
            Back to the list
        </button>
    </a>
</div>
{% endblock %}
