{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron">
    <span class="btn btn-info btn-lg btn-block">
        <h1>Edit currency</h1>
    </span>
    <br/>

    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
    <label>Currency:</label>
    <div class="form-group">
        {{ form_row(edit_form.name) }}
    </div>
    <label>Exchange rate to euro:</label>
    <div class="form-group">
        {{ form_row(edit_form.exchangeRateEUR) }}
    </div>

    <br/><br/>

    <a href="{{ path('currency_index') }}">
        <button type="button" class="btn btn-success">
            Show all currencies
        </button>
    </a>
</div>
{% endblock %}
