<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

    </head>
    <body>
        {% block header%}
            <header>
                <!-- Navigation -->

                <ul class="navbar navbar-light list-unstyled" style="background-color: #e3f2fd;">
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="#">
                            <button type="button" class="btn btn-primary">
                                Marketplace
                            </button>
                        </a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{ path('userprofile_show', {'id': app.user.getUserProfile().getId() })}}">
                                <button type="button" class="btn btn-success">
                                    My profile
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="#">
                                <button type="button" class="btn btn-success">
                                    My cart
                                </button>
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item dropdown btn btn-light">
                        <a class="nav-link dropdown-toggle btn btn-primary" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><button type="button" class="btn btn-primary">Products</button></a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <a class="dropdown-item" href="#">Something else here</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Separated link</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-warning" href="#">
                            <button type="button" class="btn btn-warning">
                                Guide
                            </button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-info" href="#">
                            <button type="button" class="btn btn-info">
                                Contact
                            </button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-info" href="#">
                            <button type="button" class="btn btn-info">
                                About
                            </button>
                        </a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link btn btn-secondary" href="{{ path('security_logout') }}">
                                <button type="button" class="btn btn-secondary">
                                    Logout
                                </button>
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{ path('register_user') }}">
                                <button type="button" class="btn btn-success">
                                    Register
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{ path('security_login') }}">
                                <button type="button" class="btn btn-success">
                                    Login
                                </button>
                            </a>
                        </li>
                    {% endif %}
                </ul>
                 {% if app.getUser() and app.getUser().isAdmin() %}
                <ul class="navbar navbar-light list-unstyled" style="background-color: #e3f2fd;">
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="{{ path('category_new') }}">
                            <button type="button" class="btn btn-primary">
                                Add category
                            </button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="{{ path('product_new') }}">
                            <button type="button" class="btn btn-primary">
                                Add product
                            </button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="{{ path('currency_new') }}">
                            <button type="button" class="btn btn-primary">
                                Add currency
                            </button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="#">
                            <button type="button" class="btn btn-primary">
                                Add promotion
                            </button>
                        </a>
                    </li>
                </ul>
                {% endif %}
            </header>
        {% endblock %}

        {% block body %}

        {% endblock %}

        {% block footer %}
            <footer>
                <div class="footer">
                    <p>&copy; 2017 - Marketplace</p>
                </div>
            </footer>
        {% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}

    </body>
</html>
