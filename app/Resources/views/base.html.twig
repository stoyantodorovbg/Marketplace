<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-grid.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-reboot.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}

    </head>
    <body>
        {% block header%}
            <header>
                <ul class="navbar navbar-light list-unstyled" style="background-color: #e3f2fd;">
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="{{ path('category_index') }}">
                            <button type="button" class="btn btn-primary">
                                Marketplace
                            </button>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="{{ path('homepage') }}">
                            <button type="button" class="btn btn-primary">
                                Home
                            </button>
                        </a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{ path('userprofile_show')}}">
                                <button type="button" class="btn btn-success">
                                    My profile
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{ path('userprofile_index') }}">
                                <button type="button" class="btn btn-success">
                                    All Users
                                </button>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" href="#">
                                <button type="button" class="btn btn-primary">
                                    My cart
                                </button>
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <div class="dropdown nav-link btn btn-success">
                            <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Info
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <h4>
                                    <a class="dropdown-item text-success" href="#">
                                        How to use Marketplace
                                    </a>
                                    <a class="dropdown-item text-success" href="#">
                                        About
                                    </a>
                                    <a class="dropdown-item text-success" href="#">
                                        Contact
                                    </a>
                                    </h4>
                                </div>
                            </button>
                        </div>
                    </li>



                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link btn btn-secondary" href="{{ path('security_logout') }}">
                                <button type="button" class="btn btn-secondary">
                                    Logout
                                </button>
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{ path('register_user') }}">
                                <button type="button" class="btn btn-success">
                                    Register
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-success" href="{{ path('security_login') }}">
                                <button type="button" class="btn btn-success">
                                    Login
                                </button>
                            </a>
                        </li>
                    {% endif %}
                </ul>
                {% if app.getUser() and (app.getUser().isAdmin() or app.getUser().isSuperAdmin())  %}
                    <ul class="navbar navbar-light list-unstyled" style="background-color: #e3f2fd;">
                        <li class="nav-item">
                            <h5 class="text-primary">
                                {% if app.getUser().isAdmin() %}
                                Hello Moderator!
                                {% endif %}
                                {% if app.getUser().isSuperAdmin() %}
                                Hello Admin!
                                {% endif %}
                            </h5>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" href="{{ path('category_new') }}">
                                <button type="button" class="btn btn-primary">
                                    Add category
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" href="{{ path('product_new') }}">
                                <button type="button" class="btn btn-primary">
                                    Add product
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" href="{{ path('currency_new') }}">
                                <button type="button" class="btn btn-primary">
                                    Add currency
                                </button>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-primary" href="#">
                                <button type="button" class="btn btn-primary">
                                    Add promotion
                                </button>
                            </a>
                        </li>
                    </ul>
                {% endif %}
            </header>
        {% endblock %}

        {% block body %}
        {% endblock %}

        {% block footer %}
            <footer>
                <div class="footer">
                    <p>&copy; 2017 - Marketplace</p>
                </div>
            </footer>
        {% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery-2.2.4.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}

    </body>
</html>
