{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
    <span class="btn btn-info btn-lg btn-block">
        <h1>Contact messages list</h1>
    </span>
        <br/>
        <div class="container body-content">
            {% for contact in contacts %}
                <div class="row">
                    <div class="container-fluid">
                        <div class="col-md-6">
                            <h1>
                                <a href="{{ path('contact_show', { 'id': contact.id }) }}">
                                    <span class="badge badge-secondary">
                                        {{ contact.id }}
                                    </span>
                                </a>
                            </h1>
                        </div>
                    </div>
                </div>
                <br/><br/>
            {% endfor %}
        </div>
    </div>
{% endblock %}
