{% extends 'base.html.twig' %}

{% block body %}

    <div class="jumbotron">
    <span class="btn btn-info btn-lg btn-block">
        <h1>Choose which type of promotion you want to create</h1>
    </span>
        <br/>

        <form>
            <div class="form-group">
                <label>Select type:</label>
                <br/>
                <select name="choose-type">
                    <option value="certain_products">Promotion on certain products</option>
                    <option value="all_products">Promotion on all products</option>
                    <option value="certain_categories">Promotion on certain categories</option>
                    <option value="certain_users">Promotion for certain users</option>
                </select>
            </div>
            <input type="submit" class="btn btn-success" value="Continue">
        </form>
    <br/>
    <a href="{{ path('homepage') }}">
        <button type="button" class="btn btn-info">
            cancel
        </button>
    </a>
    </div>

{% endblock %}