{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
    <span class="btn btn-info btn-lg btn-block">
        <h2>Define minimum user purchases value in euro for this promotion</h2>
    </span>
        <br/>

        <form action="setPurchaseValue">
            <div class="form-group">
                <div class="form-group">
                    <div class="form-group">
                        <input type="number" name="min_purchases_value">
                    </div>
                </div>
                <input type="submit" class="btn btn-success" value="Continue">
            </div>
        </form>
        <br/>
        <a href="{{ path('promotion_index') }}">
            <button type="button" class="btn btn-info">
                Show all promotions
            </button>
        </a>
    </div>
{% endblock %}